<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ilija.mojrestoran">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".AppObject"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:clearTaskOnLaunch="true"
            android:configChanges="keyboardHidden|orientation"
            android:finishOnTaskLaunch="true"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity" />
        <activity
            android:name=".ui.AdminHomeActivity"
            android:label="MojRestoran" />
        <activity
            android:name=".ui.KonobarHomeActivity"
            android:label="MojRestoran" />
        <activity android:name=".ui.BaseActivity" />
        <activity
            android:name=".ui.ProfilDetaljiActivity"
            android:label="Profil" />
        <activity
            android:name=".ui.AdminKorisniciActivity"
            android:label="Korisnici" />

    </application>

</manifest>
