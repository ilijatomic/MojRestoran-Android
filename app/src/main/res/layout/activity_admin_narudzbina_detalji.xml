<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ilija.mojrestoran.ui.activity.AdminNarudzbinaDetaljiActivity">

    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/detalji_datum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/detalji_ime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/detalji_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="20sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0" />

    <ListView
        android:id="@+id/detalji_racun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/background_light"
        android:dividerHeight="1dp" />

    <TextView
        android:id="@+id/detalji_ukupno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:textSize="20sp" />
</LinearLayout>
